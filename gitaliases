# Dr Nic Compatibility Mode

alias gl='git pull --rebase'
alias glo='git log $1 --oneline | tail'
alias gap='git add -p .'
alias gcp='git checkout -p .'
alias gsp='git stash -p .'
alias gc='git commit -v'
alias gco='git checkout'
alias grh='git reset HEAD'
alias grc='git rebase --continue'
alias grs='git rebase --skip'
alias gra='git rebase --abort'
alias gar='git am --resolved'
alias gas='git am --skip'
alias gaa='git am --abort'
alias sha='git rev-parse HEAD | sed ":a;N;$!ba;s/\n//g" | pbcopy'
alias cherry='git cherry-pick $1'

alias good='git bisect good'
alias bad='git bisect bad'

function branch_name() {
  branch_name="$(git symbolic-ref HEAD 2>/dev/null)"
  branch_name=${branch_name##refs/heads/}
  echo $branch_name
}

function push() {
  git push origin `branch_name`
}

function spush() {
  git push spree `branch_name`
}

function pull() {
  git pull --rebase origin `branch_name`
}

function spull() {
  git pull --rebase spree `branch_name`
}

function fix() {
  git rebase -i HEAD~$1
}

function pt() {
  `git push origin ${*:1}`
}

function spt() {
  `git push spree ${*:1}`
}

function sco() {
  wd=`pwd`
  for project in spree spree_gateway spree_auth_devise spree_social spree_paypal_express spree_i18n spree_fancy spree-multi-domain; do
  echo "Checking out ${project}"
  cd ~/Projects/gems/${project}
  git checkout $1 -q
  done
  cd $wd
}

function mt() {
  sha=`git rev-parse HEAD`
  for branch in ${*:1}; do
    git checkout $branch
    git cherry-pick $sha
  done
}

alias pap='pull && push'
alias spap='spull && spush'
alias m='hub am -3 $1'

alias gitrm="git status | grep deleted | awk '{print $3}' | xargs git rm"

export PATH=/usr/local/git/bin:$PATH
export MANPATH=/usr/local/git/man:$MANPATH
